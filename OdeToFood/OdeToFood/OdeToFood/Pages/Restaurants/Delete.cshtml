@page "{restaurantId}"
@model OdeToFood.Pages.Restaurants.DeleteModel
@{
    Layout = "_Layout2";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width"/>
    <title>Delete</title>
</head>
<body>

    <h2>Delete Restaurant</h2>
    <div class="alert alert-danger">Are you sure you want to delete @Model.Restaurant.Name?</div>
    <form method="post">
        <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
        <a asp-page="List" class="btn btn-sm btn-outline-default">Cancel</a>
    </form>

</body>
</html>